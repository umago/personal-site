<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

        <link rel="stylesheet" type="text/css" href="{{ baseurl }}/style.css">
        {% if title %}
            <title>{{ title }}</title>
        {% endif %}
    </head>

    <body>
	<div class="wrapper">
	    <div class="header">
		<h1>{{ header }}</h1>
		<ul>
		    {% for name, href in __links__ %}
                        {% if href.startswith('http') %}
			    <li><a href="{{ href }}">{{ name }}</a></li>
                        {% else %}
			    <li><a href="{{ baseurl }}/{{ href }}">{{ name }}</a></li>
                        {% endif %}
		    {% endfor %}
		</ul>
	    </div>
	    {% if __posts__ %}
		<div class="posts">
                    <ul>
                        {% for post in __posts__ %}
                            <li>{{ post.date.strftime('%d %B, %Y') }} - <a href="{{ post.__href__ }}">{{ post.title }}</a></li>
                        {% endfor %}
                    </ul>
		</div>
	    {% endif %}

	    {% if __content__ %}
		<div class="content">
		    {{ __content__ }}
		<div>
	    {% endif %}
            <div class="footer">
               {% if footer %}
                   <p>{{ footer }}</p>
               {% endif %}
            </div>
        </div>
    </body>

</html>
